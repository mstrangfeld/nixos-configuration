{ pkgs, ... }:
{
  programs.autorandr = {
    enable = true;
    profiles = {
      "home" = {
        fingerprint = {
          DP-2 = "";
          DP-3 = "";
        };
        config = {
          DP-2 = {
            enable = true;
            mode = "1920x1080";
            position = "0x120";
            rotate = "right";
          };
          DP-3 = {
            enable = true;
            primary = true;
            mode = "3840x2160";
            dpi = 157;
            position = "1080x0";
            rotate = "normal";
          };
        };
      };
    };
    hooks.postswitch = {
      "restart Xmonad" = "${pkgs.xmonad-with-packages}/bin/xmonad --restart";
      "restore wallpaper" = "${pkgs.nitrogen}/bin/nitrogen --restore";
    };
  };
}
